    <select id="selectTempgroup" parameterType="Tempgroup" resultMap="TempgroupResult">
        select
            tgid,
            tgname,
            tempgroup.userid,
            createtime,
            tempgroup.note,
			tempgroup.uname,
            listid
        from tempgroup left join userinfo on tempgroup.rightuserid = userinfo.userid
        order by createtime desc
    </select>

    <!--插入临时列表-->
    <insert id="insertTempgroup" parameterType="Tempgroup">
        insert into <include refid="tableName"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="tgid != null  and tgid != '' ">tgid,</if>
            <if test="tgname != null  and tgname != '' ">tgname,</if>
            <if test="userid != null  and userid != '' ">userid,</if>
            <if test="createtime != null  and createtime != '' ">createtime,</if>
            <if test="note != null  and note != '' ">note,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="tgid != null  and tgid != '' ">tgid,</if>
            <if test="tgname != null  and tgname != '' ">tgname,</if>
            <if test="userid != null  and userid != '' ">userid,</if>
            <if test="createtime != null  and createtime != '' ">createtime,</if>
            <if test="note != null  and note != '' ">note,</if>
        </trim>
    </insert>

    <select id="selectTempgroupById" parameterType="String" resultMap="TempgroupResult">
        select
            aid,
            parentaid,
            aname,
            note
        from
        <include refid="areatableName"/>
        where aid = #{aid}
    </select>

    <delete id="deleteTempgroup" parameterType="String">
        delete from tempgroup
        where createtime = #{createtime}
    </delete>

</mapper>
<mapper namespace="com.ruoyi.broad.mapper.TempgroupMapper">
    <resultMap type="Tempgroup" id="TempgroupResult">
        <result property="tid"    column="tid"    />
        <result property="tname"    column="tname"    />
        <result property="aname"    column="aname"    />
        <result property="address"    column="address"    />
        <result property="parentaid" column="parentaid"/>
        <result property="aid" column="aid"/>
        <result property="tgid" column="tgid"/>
        <result property="userid" column="userid"/>
        <result property="createtime" column="createtime"/>
        <result property="listId" column="listid"/>
        <result property="uname" column="uname"/>

    </resultMap>

    <!--字段-->
    <sql id="Field">
        tgid,
        tgname,
        userid,
        rightuserid,
        createtime,
        note
    </sql>

    <!--字段值-->
    <sql id="FieldValue">
        #{tgid},
        #{tgname},
        #{userid},
        #{rightuserid},
        #{createtime},
        #{note}
    </sql>

    <!--字段-->
    <sql id="TelField">
        tgid,
        tid
    </sql>

    <!--字段值-->
    <sql id="TelFieldValue">
        #{tgid}
        #{tid}
    </sql>

    <!--表名-->
    <sql id="tableName">
		tempgroup
	</sql>
    <sql id="grouptertable">
        tempgroup_ter
    </sql>
    <sql id="tertableName">
        terminals
    </sql>
    <sql id="areatableName">
        area
    </sql>
    <sql id="usertable">
        user.userinfo
    </sql>
    <!--查询所有临时列表-->
    <select id="selectAllTempgroup" parameterType="Tempgroup" resultMap="TempgroupResult">
       select
            tt.aid as aid,
            aa.parentaid as parentaid,
            tid,
            tname,
            aname,
            address
        from
            <include refid="tertableName"/> tt left join <include refid="areatableName"/> aa
        on tt.aid = aa.aid
        <where>
            <if test="aid != null  and aid != '' ">and tt.aid like CONCAT('%',#{aid},'%')</if>
        </where>
    </select>

